  <style>
    :root{
      --margin: 20;   /* px */
      --border: 7;    /* px */
      --padding: 10;  /* px */
      --radius: 10px;

      --clr-bg: #f6f7fb;
      --clr-text: #0f172a;
      --clr-muted: #64748b;
      --clr-card: #ffffff;
      --shadow: 0 6px 24px rgba(2,6,23,.08), 0 2px 8px rgba(2,6,23,.06);

      /* Visualization colors */
      --clr-margin: #e2e8f0;   /* light gray for margin area */
      --clr-border: #b1743a;   /* border color */
      --clr-padding: #e6a72d;  /* padding color */
      --clr-content: #2f7ea6;  /* content color */
    }

    * { box-sizing: border-box; }
    html, body { height: 100%; }
    body{
      margin:0;
      font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji";
      color: var(--clr-text);
      background: var(--clr-bg);
      display: grid;
      place-items: center;
    }

    .wrap{
      width: min(950px, 92vw);
      padding: 32px 20px 40px;
      background: var(--clr-card);
      border-radius: 18px;
      box-shadow: var(--shadow);
    }

    h1{
      margin: 0 0 22px;
      text-align:center;
      font-size: clamp(20px, 3.4vw, 28px);
      letter-spacing:.2px;
    }

    .demo{
      display:grid;
      grid-template-columns: 1fr;
      gap: 24px;
      align-items: start;
      justify-items: center;
    }

    @media (min-width: 880px){
      .demo{ grid-template-columns: 1fr 1fr; }
    }

    /* Visual model */
    .stage{
      min-height: 320px;
      display:grid; place-items:center;
      padding: 10px;
    }

    /* The "margin" visual wrapper uses padding to simulate margin space */
    .margin-wrap{
      padding: calc(var(--margin) * 1px);
      background: repeating-linear-gradient(45deg, var(--clr-margin), var(--clr-margin) 10px, #f1f5f9 10px, #f1f5f9 20px);
      border-radius: var(--radius);
      transition: padding .15s ease;
    }

    .box{
      width: 180px; height: 150px;

      border: calc(var(--border) * 1px) solid var(--clr-border);
      padding: calc(var(--padding) * 1px);
      background: var(--clr-padding);
      border-radius: var(--radius);
      display:flex; align-items:center; justify-content:center;
      box-shadow: 0 1px 0 rgba(0,0,0,.06) inset;
      transition: border-width .15s ease, padding .15s ease;
    }

    .content{
      background: var(--clr-content);
      color: #fff;
      width:100%; height:100%;
      border-radius: calc(var(--radius) - 4px);
      display:flex; align-items:center; justify-content:center;
      font-weight: 600;
      text-align:center;
      user-select:none;
    }
    

    /* Controls */
    .controls{
      width: min(520px, 92%);
      background: #ffffff;
      border: 1px solid #e5e7eb;
      border-radius: 14px;
      padding: 16px 18px;
      box-shadow: 0 2px 10px rgba(2,6,23,.04);
    }

    .row{ display:grid; grid-template-columns: 95px 1fr auto; gap: 14px; align-items:center; margin: 10px 0; }
    label{ color: var(--clr-muted); font-weight:600; }
    input[type="range"]{ width: 100%; }
    output{ min-width: 3ch; text-align:right; font-variant-numeric: tabular-nums; }

    /* Legend */
    .legend{ margin-top: 14px; }
    .legend h3{ margin: 18px 0 10px; text-align:center; font-size: 1.05rem; }
    .legend ul{ list-style:none; padding:0; margin:0; display:grid; gap:10px; }
    .legend li{ display:grid; grid-template-columns: 20px 1fr; gap:10px; align-items:center; }
    .swatch{ width:20px; height:20px; border-radius:5px; border:1px solid #0f172a12; }
    .swatch.margin{ background: var(--clr-margin); background: repeating-linear-gradient(45deg, var(--clr-margin), var(--clr-margin) 10px, #f1f5f9 10px, #f1f5f9 20px); }
    .swatch.border{ background: var(--clr-border); }
    .swatch.padding{ background: var(--clr-padding); }
    .swatch.content{ background: var(--clr-content); }
    .muted{ color: var(--clr-muted); font-size: .95rem; }
  </style>
