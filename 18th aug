<body>
  <main class="wrap" role="main">
    <h1>CSS Box Model Demonstration</h1>

    <section class="demo" aria-label="Interactive box model">
      <div class="stage">
        <div class="margin-wrap" aria-hidden="true">
          <div class="box">
            <div class="content">Content</div>
          </div>
        </div>
      </div>

      <form class="controls" id="controls" onsubmit="return false;" aria-label="Controls for margin, border and padding">
        <div class="row">
          <label for="margin">Margin</label>
          <input id="margin" name="margin" type="range" min="0" max="60" value="20" step="1" />
          <output id="marginOut" for="margin">20px</output>
        </div>
        <div class="row">
          <label for="border">Border</label>
          <input id="border" name="border" type="range" min="0" max="24" value="7" step="1" />
          <output id="borderOut" for="border">7px</output>
        </div>
        <div class="row">
          <label for="padding">Padding</label>
          <input id="padding" name="padding" type="range" min="0" max="40" value="10" step="1" />
          <output id="paddingOut" for="padding">10px</output>
        </div>
        <p class="muted" style="margin: 8px 0 0;">Drag the sliders to see how each property affects the element.</p>
      </form>
    </section>

    <section class="legend" aria-label="Box Model Components">
      <h3>Box Model Components</h3>
      <ul>
        <li><span class="swatch margin"></span><span><strong>Margin</strong> – Space outside the border (transparent area).</span></li>
        <li><span class="swatch border"></span><span><strong>Border</strong> – Surrounds the padding and content.</span></li>
        <li><span class="swatch padding"></span><span><strong>Padding</strong> – Space between border and content.</span></li>
        <li><span class="swatch content"></span><span><strong>Content</strong> – The actual content of the box.</span></li>
      </ul>
    </section>
  </main>

  <script>
    const root = document.documentElement;
    const $ = (id) => document.getElementById(id);

    const controls = [
      { id: 'margin',  varName: '--margin',  out: 'marginOut' },
      { id: 'border',  varName: '--border',  out: 'borderOut' },
      { id: 'padding', varName: '--padding', out: 'paddingOut' }
    ];

    controls.forEach(({id, varName, out}) => {
      const input = $(id);
      const output = $(out);
      const setVal = (val) => {
        root.style.setProperty(varName, val);
        output.textContent = `${val}px`;
      };
      setVal(input.value);
      input.addEventListener('input', (e) => setVal(e.target.value));
    });
  </script>
